#include <stdio.h>
#include <locale.h>
int main() {
	
	setlocale(LC_ALL, "Portuguese");
	
	printf("\nExercício 2");
	
	int v[10],i,par=0,soma=0;
	
	for (i=0;i<10;i++){
	printf("\nEntre com um valor:  ");
	scanf("%d", &v[i]);

	if (v[i]<=0){
		printf("Valor inválido");
		break;
	}
}
printf("Valores do Array\n");
  for (i=0;i<10;i++)
  printf(" %d", v[i]);
 

 
  for(i=0;i<10;i++){
 	if(v[i]%2==0){
 		 soma=soma+v[i];
	  }
  }
 printf("\nSoma dos valores pares do Array");
  printf("\n%d", soma);
}
