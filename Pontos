#include <stdio.h>
#include <string.h>
#define QUANTIDADEDEPONTOS 3

typedef struct{
    int x;
    int y;
} Ponto;
int main(){
    
    int i = 0;
    
    Ponto pontos[QUANTIDADEDEPONTOS];
    
    pontos[0].x = -4;
    pontos[0].y = 7;
    pontos[1].x = 2;
    pontos[1].y = -9;
    pontos[2].x = 5;
    pontos[2].y = 3;
    
    for(int i=0; i<QUANTIDADEDEPONTOS; i++);{
        
        if (pontos[i].y > 0)
            printf("Ponto acima da reta");
        
        else
            printf("O ponto est√° abaixo da reta");
        
        
    }
}
